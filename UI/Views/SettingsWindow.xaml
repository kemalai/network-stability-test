<Window x:Class="InternetMonitor.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InternetMonitor.UI.ViewModels"
        Title="{Binding L[Settings]}"
        Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Ping Ayarlari -->
                <GroupBox Header="{Binding L[PingSettings]}" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding L[PrimaryTarget]}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding PingTarget, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="{Binding L[SecondaryTarget]}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SecondaryPingTarget, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>

                        <!-- Ping Araligi - Slider -->
                        <TextBlock Text="{Binding L[PingInterval]}" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Minimum="0.5" Maximum="60"
                                    Value="{Binding PingIntervalSeconds, Mode=TwoWay}"
                                    TickFrequency="0.5"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PingIntervalDisplayText}"
                                       Foreground="White"
                                       FontSize="12"
                                       Margin="10,0,0,0"
                                       MinWidth="120"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Hizli secim butonlari -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="0.5s" Click="QuickInterval_Click" Tag="0.5"
                                    Background="#3D3D3D" Foreground="White" Padding="8,4" Margin="0,0,5,0" BorderThickness="0"/>
                            <Button Content="1s" Click="QuickInterval_Click" Tag="1"
                                    Background="#3D3D3D" Foreground="White" Padding="8,4" Margin="0,0,5,0" BorderThickness="0"/>
                            <Button Content="2s" Click="QuickInterval_Click" Tag="2"
                                    Background="#3D3D3D" Foreground="White" Padding="8,4" Margin="0,0,5,0" BorderThickness="0"/>
                            <Button Content="5s" Click="QuickInterval_Click" Tag="5"
                                    Background="#3D3D3D" Foreground="White" Padding="8,4" Margin="0,0,5,0" BorderThickness="0"/>
                            <Button Content="10s" Click="QuickInterval_Click" Tag="10"
                                    Background="#3D3D3D" Foreground="White" Padding="8,4" Margin="0,0,5,0" BorderThickness="0"/>
                            <Button Content="30s" Click="QuickInterval_Click" Tag="30"
                                    Background="#3D3D3D" Foreground="White" Padding="8,4" BorderThickness="0"/>
                        </StackPanel>

                        <TextBlock Text="{Binding L[Timeout]}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding PingTimeoutMs, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Bildirim Esikleri -->
                <GroupBox Header="{Binding L[NotificationThresholds]}" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding L[HighPing]}" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding HighLatencyThreshold, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding L[PacketLossPercent]}" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding PacketLossThreshold, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{Binding L[DowntimeThreshold]}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DowntimeThreshold, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Uygulama Ayarlari -->
                <GroupBox Header="{Binding L[ApplicationSettings]}" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <!-- Dil Secimi -->
                        <TextBlock Text="{Binding L[Language]}" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                  SelectedItem="{Binding SelectedLanguage}"
                                  DisplayMemberPath="DisplayName"
                                  Background="#2D2D2D"
                                  Foreground="White"
                                  BorderBrush="#3D3D3D"
                                  Padding="8,6"
                                  Margin="0,0,0,15">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="#2D2D2D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <CheckBox Content="{Binding L[EnableNotifications]}"
                                  IsChecked="{Binding EnableNotifications}"
                                  Style="{StaticResource CheckBoxStyle}"/>

                        <CheckBox Content="{Binding L[MinimizeToTray]}"
                                  IsChecked="{Binding MinimizeToTray}"
                                  Style="{StaticResource CheckBoxStyle}"/>

                        <CheckBox Content="{Binding L[StartWithWindows]}"
                                  IsChecked="{Binding StartWithWindows}"
                                  Style="{StaticResource CheckBoxStyle}"/>

                        <TextBlock Text="{Binding L[DataRetention]}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DataRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{Binding L[ResetToDefaults]}"
                    Command="{Binding ResetToDefaultsCommand}"
                    Background="#555555"
                    Style="{StaticResource ButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="{Binding L[Save]}"
                    Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource ButtonStyle}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
